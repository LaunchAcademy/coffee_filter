<body class="shops">


  <div class="col-md-12 center">
    <h1><span class="white page-title">Shops</span></h1>
  </div>

  <div class="col-md-10">
    <ul>
    <% @shops.each do |shop| %>
      <li><%= link_to shop.name, shop_path(shop), class: "shop-listing" %></li>
    <% end %>
    </ul>
    <br />
    <%= link_to 'Add a coffee shop', new_shop_path %>
  </div>

</body>

<ul>
  <% @shops.each do |shop| %>
    <li>
      <% if signed_in? && current_user.is_admin? %>
        <%= link_to 'Delete', shop_path(shop), method: :delete %>
        <%= link_to 'Edit', edit_shop_path(shop) %>
      <% end %>
      <%= link_to shop.name, shop_path(shop) %>
    </li>
    <li>
      <%= shop.address %>
    </li>
  <% end %>
</ul>
<br />
<%= link_to 'Add a coffee shop', new_shop_path %>

<%= paginate @shops %>

