<h1>Edit shop page</h1>

<%= form_for @shop do |f| %>
  <p>
    <%= f.label :name, 'Coffee shop name:' %><br>
    <%= f.text_field :name %><br>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Update shop" %>
  </p>
<% end %>
